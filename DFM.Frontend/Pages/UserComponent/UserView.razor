@inject IHttpService httpService
@inject AccessTokenStorage accessToken
@inject ServiceEndpoint endpoint
@inject LocalStorageHelper storageHelper
@inject EnvConf envConf
@inject IDialogService DialogService

<MudContainer>
    <MudGrid>
        <MudItem xs="12" md="12" Class="d-flex flex-grow-1 gap-4">
            <h2>ຂໍ້ມູນພະນັກງານ</h2>
        </MudItem>
        <MudItem xs="12" md="6" Class="d-flex flex-grow-1 gap-4">
            <MudField Label="ຊື່" Variant="Variant.Text">@Employee!.Name.Local</MudField>
        </MudItem>
        <MudItem xs="12" md="6" Class="d-flex flex-grow-1 gap-4">
            <MudField Label="ນາມສະກຸນ" Variant="Variant.Text">@Employee!.FamilyName.Local</MudField>
        </MudItem>

        <MudItem xs="12" md="6" Class="d-flex flex-grow-1 gap-4">
            <MudField Label="Name" Variant="Variant.Text">@Employee!.Name.Eng</MudField>
        </MudItem>
        <MudItem xs="12" md="6" Class="d-flex flex-grow-1 gap-4">
            <MudField Label="Family name" Variant="Variant.Text">@Employee!.FamilyName.Local</MudField>
        </MudItem>

        <MudItem xs="12" md="4" Class="d-flex flex-grow-1 gap-4">
            <MudField Label="ວັນເດືອນປີເກີດ" Variant="Variant.Text">@Employee!.Dob</MudField>
