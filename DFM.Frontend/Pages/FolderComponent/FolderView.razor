@inject IHttpService httpService
@inject AccessTokenStorage accessToken
@inject ServiceEndpoint endpoint
@inject LocalStorageHelper storageHelper
<MudContainer>
    <MudGrid>
        <MudItem xs="12" md="12" Class="d-flex flex-grow-1 gap-4">
            <MudField Label="ຊື່ແຟ້ມ" Variant="Variant.Text">@FolderModel!.Title</MudField>
        </MudItem>
        <MudItem xs="12" md="6" Class="d-flex flex-grow-1 gap-4">
            <MudField Label="ເລກທີ່ເລີ່ມຕົ້ນ" Variant="Variant.Text">@FolderModel!.Start</MudField>
        </MudItem>
        <MudItem xs="12" md="6" Class="d-flex flex-grow-1 gap-4">
            <MudField Label="ເລກທີຖັດໄປ" Variant="Variant.Text">@FolderModel!.NextNumber</MudField>
        </MudItem>
        <MudItem xs="12" md="6" Class="d-flex flex-grow-1 gap-4">
            <MudField Label="ລຳດັບແຟ້ມ" Variant="Variant.Text">@FolderModel!.Seq</MudField>
        </MudItem>
        <MudItem xs="12" md="6" Class="d-flex flex-grow-1 gap-4">
            <MudField Label="ອັກສອນນຳຫນ້າ" Variant="Variant.Text">@FolderModel!.Prefix</MudField>
        </MudItem>
        <MudItem xs="12" md="6" Class="d-flex flex-grow-1 gap-4">
            <MudField Label="ວັນທີ່ນຳໃຊ້ແຟ້ມ" Variant="Variant.Text">@FolderModel!.StartDate</MudField>
        </MudItem>
        <MudItem xs="12" md="6" Class="d-flex flex-grow-1 gap-4">
            <MudField Label="ວັນທີປິດແຟ້ມ" Variant="Variant.Text">@FolderModel!.ExpiredDate</MudField>
        </MudItem>
        
        <MudItem xs="12" md="6" Class="d-flex flex-grow-1 gap-4">
            <MudField Label="ຕົວຫຍໍ້ອົງກອນ" Variant="Variant.Text">@FolderModel!.ShortName</MudField>
        </MudItem>
        <MudItem xs="12" md="6" Class="d-flex flex-grow-1 gap-4">
            <MudField Label="ຮູບແບບເລກທີ" Variant="Variant.Text">
                @displayFormat
            </MudField>
        </MudItem>
        <MudItem xs="12" md="12" Class="d-flex flex-grow-1 gap-4">
            <MudField Label="ຫນ່ວຍງານຮັບຜິດຊອບ" Variant="Variant.Text">
                @foreach (var item in FolderModel!.Supervisors)
                {
                    if (supervisors != null)
                    {
                        var spvs = supervisors.FirstOrDefault(x => x.Role.RoleID == item);
                        if (spvs != null)
                        {
                            <MudChip Color="Color.Info">@spvs.Role.Display.Local - @spvs.Employee.Name.Local</MudChip>
                        }
                    }
                }
            </MudField>
        </MudItem>
        <MudItem xs="12" md="12" Class="d-flex flex-grow-1 gap-4">
             <MudField Label="ປະເພດເອກະສານ" Variant="Variant.Text">
                @foreach (var item in FolderModel!.SupportDocTypes)
                {
                    if (docTypeModels != null)
                    {
                        var docType = docTypeModels!.FirstOrDefault(x => x.id == item);
                        if (docType != null)
                        {
                            <MudChip Color="Color.Warning">@docType.DocType</MudChip>
                           
                        }
                    }
                    
                    
                }
             </MudField>
        </MudItem>
        <MudItem xs="12" md="12" Class="d-flex flex-grow-1 gap-4">
            
        </MudItem>
    </MudGrid>
</MudContainer>

@code {
    [Parameter] public string? RoleId { get; set; }
    [Parameter] public FolderModel? FolderModel { get; set; }
}
